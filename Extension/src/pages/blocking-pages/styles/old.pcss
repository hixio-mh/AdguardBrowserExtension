body[data-page-name="errorPage"] {
  background-color: #d8dfe3;
  text-align: center;
  font-family: "Arial", sans-serif;
  font-size: 14px;
  font-weight: normal;

  a {
    color: #46bb61;
  }

  a:hover {
    color: #57c771;
  }

  #window {
    margin: 110px auto 0;
    width: 700px;
    background: #fff;
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.3);
    text-align: left;
    position: relative;
    z-index: 1;
  }

  .title {
    background-repeat: no-repeat;
    background-position: 18px 7px;
    background-image: url(data:image/svg+xml;base64,);
    font-size: 24px;
    letter-spacing: -1px;
    font-weight: 700;
    padding: 24px 0 24px 92px;
    text-align: left;
    position: relative;
    border-bottom: 1px solid #e6e6e6;
  }

  .content {
    padding: 10px 30px;
    line-height: 21px;
    font-size: 15px;
  }

  .actions {
    margin: 30px 0px 20px;
    overflow: hidden;
    clear: both;
  }

  .no-mrg {
    margin-bottom: 10px;
  }

  .textarea {
    width: 100%;
    max-width: 100%;
    min-height: 140px;
  }

  .suggestions {
    margin-top: 0;
    list-style-position: inside;
    padding-left: 10px;
  }

  .suggestions li {
    margin-bottom: 10px;
  }

  @media screen and (max-width: 720px) {
    body,
    html {
      padding: 0;
      margin: 0;
      background: none;
    }

    #window {
      margin: 0;
      width: 100%;
      box-shadow: none;
      -moz-box-shadow: none;
      -webkit-box-shadow: none;
    }
  }

  @media screen and (max-width: 500px) {
    .title {
      padding-left: 30px;
      background-image: none;
    }
  }
}

